---
import { getCollection } from 'astro:content';

// Load from content/sponsors.json
const sponsors = await getCollection('sponsors');
---

<!-- Sponsors -->
<section id="sponsors-section" class="not-prose py-16 sm:py-24" aria-labelledby="sponsors">
    <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-12">
            <h2 id="sponsors" class="text-4xl sm:text-5xl font-chicago text-neutral-900 dark:text-neutral-100 mb-4">sponsors</h2>
            <p class="text-xl text-neutral-700 dark:text-neutral-300 mb-8">
                Thank you to all our generous <a href="https://github.com/sponsors/bigskysoftware?o=esb" class="text-blue-600 dark:text-blue-400 hover:underline">sponsors</a>!
            </p>
        </header>

        {['platinum', 'silver'].map(tier => {
            const tierSponsors = sponsors.filter(s => s.data.tier === tier);
            if (tierSponsors.length === 0) return null;

            return (
                    <section class="mb-12 last:mb-0" aria-labelledby={`${tier}-sponsors-heading`}>
                        <h3 id={`${tier}-sponsors-heading`} class="inline-flex items-center gap-2 mb-6 px-4 py-2 font-chicago text-sm font-bold rounded-[3px] border
                       data-[tier=silver]:text-neutral-700 data-[tier=silver]:bg-neutral-100 data-[tier=silver]:border-neutral-300
                       data-[tier=platinum]:text-blue-600  data-[tier=platinum]:bg-blue-50 data-[tier=platinum]:border-blue-600
                       dark:data-[tier=silver]:text-neutral-300 dark:data-[tier=silver]:bg-neutral-800 dark:data-[tier=silver]:border-neutral-700
                       dark:data-[tier=platinum]:text-blue-400 dark:data-[tier=platinum]:bg-blue-950/50 dark:data-[tier=platinum]:border-blue-500"
                            data-tier={tier}>
                            <span aria-hidden="true">{tier === 'platinum' ? '◆' : '★'}</span>
                            <span class="uppercase tracking-wide">{tier} Sponsor{tierSponsors.length > 1 ? 's' : ''}</span>
                        </h3>

                        <ul class="grid gap-4 list-none p-0 m-0 data-[tier=platinum]:grid-cols-1 data-[tier=silver]:grid-cols-1 data-[tier=silver]:md:grid-cols-2 data-[tier=silver]:lg:grid-cols-3"
                            data-tier={tier}>
                            {tierSponsors.map(sponsor => (
                                    <li class="group border border-neutral-200/50 dark:border-neutral-800 bg-white dark:bg-neutral-900/30 hover:bg-neutral-100 dark:hover:bg-neutral-800/50 rounded-[3px] data-[tier=platinum]:min-h-[180px] data-[tier=silver]:min-h-[120px]"
                                        data-tier={tier}>
                                        <a href={sponsor.data.url}
                                           data-github-account={sponsor.data.github}
                                           class="flex items-center justify-center w-full h-full p-6 data-[tier=platinum]:p-10 cursor-pointer"
                                           data-tier={tier}>
                                            <img src={`/img/sponsors/${sponsor.data.logo}`}
                                                 alt={`${sponsor.data.name} logo`}
                                                 class="w-full object-contain pointer-events-none
                                            group-data-[tier=platinum]:h-[90px] group-data-[tier=platinum]:max-w-full
                                            group-data-[tier=silver]:h-[50px] group-data-[tier=silver]:max-w-[180px]" />
                                        </a>
                                    </li>
                            ))}
                        </ul>
                    </section>
            );
        })}
    </div>
    <div class="flex justify-center w-full mt-24">
        <a href="https://github.com/sponsors/bigskysoftware?o=esb" class="os9-button inline-flex items-center gap-2 px-6 py-2.5">
            <iconify-icon icon="tabler:heart-filled" class="text-red-500"></iconify-icon>
            Sponsor htmx
        </a>
    </div>
</section>